# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Text files
*.txt text eol=lf
*.md text eol=lf
*.csv text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.pdf binary
*.zip binary
*.tar.gz binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary

